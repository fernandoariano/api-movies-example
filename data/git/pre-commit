#!/bin/sh

# For java

COLOR_RESET='\033[0m'
COLOR_BLACK='\033[0;30m'
COLOR_RED='\033[0;31m'
COLOR_GREEN='\033[0;32m'
COLOR_ORANGE='\033[0;33m'
COLOR_BLUE='\033[0;34m'
COLOR_PURPLE='\033[0;35m'
COLOR_CYAN='\033[0;36m'
COLOR_LIGHT_GRAY='\033[0;37m'
COLOR_DARK_GRAY='\033[1;30m'
COLOR_LIGHT_RED='\033[1;31m'
COLOR_LIGHT_GREEN='\033[1;32m'
COLOR_YELLOW='\033[1;33m'
COLOR_LIGHT_BLUE='\033[1;34m'
COLOR_LIGHT_PURPLE='\033[1;35m'
COLOR_LIGHT_CYAN='\033[1;36m'
COLOR_WHITE='\033[1;37m'

# echo "${COLOR_RESET}COLOR_RESET ${COLOR_BLACK}COLOR_BLACK ${COLOR_RED}COLOR_RED ${COLOR_GREEN}COLOR_GREEN ${COLOR_ORANGE}COLOR_ORANGE ${COLOR_BLUE}COLOR_BLUE ${COLOR_PURPLE}COLOR_PURPLE ${COLOR_CYAN}COLOR_CYAN ${COLOR_LIGHT_GRAY}COLOR_LIGHT_GRAY ${COLOR_DARK_GRAY}COLOR_DARK_GRAY ${COLOR_LIGHT_RED}COLOR_LIGHT_RED ${COLOR_LIGHT_GREEN}COLOR_LIGHT_GREEN ${COLOR_YELLOW}COLOR_YELLOW ${COLOR_LIGHT_BLUE}COLOR_LIGHT_BLUE ${COLOR_LIGHT_PURPLE}COLOR_LIGHT_PURPLE ${COLOR_LIGHT_CYAN}COLOR_LIGHT_CYAN ${COLOR_WHITE}COLOR_WHITE"

execute_tests() {
  echo
  echo "${COLOR_LIGHT_BLUE}INI: execute_tests()${COLOR_RESET}"
  echo
  pwd
  echo
  mvn clean test
  if [ $? -ne 0 ]; then
    echo "${COLOR_LIGHT_RED}Error${COLOR_RED} while testing the code${COLOR_RESET}"
    cd $CWD
    exit 1
  fi
  echo "END: execute_tests()"
}

execute_tests
